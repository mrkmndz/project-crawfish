<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/connections_list_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="16dp"
        cardview:cardElevation="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            >

            <ImageView
                android:id="@+id/list_item_contact_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/contact_list_item_photo"
                android:padding="40dp"
                />

            <TextView
                android:id="@+id/list_item_contact_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/list_item_contact_photo"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Contact Name"
                />

            <TextView
                android:id="@+id/list_item_contact_position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_contact_name"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/list_item_contact_photo"
                android:padding="4dp"
                android:textSize="16sp"
                tools:text="Contact Position"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
