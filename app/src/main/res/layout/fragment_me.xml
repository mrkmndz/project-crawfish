<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:cardview="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/actual_card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        cardview:cardCornerRadius="8dp"
        cardview:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="fill_vertical">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray"
                    android:contentDescription="@string/contact_photo"
                    android:cropToPadding="true"/>

                <android.widget.IconButton
                    android:id="@+id/edit_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal|top"
                    android:text="{fa_pencil_square_o}"
                    android:textColor="@color/editButton"
                    android:textSize="28sp"
                    />

                <android.widget.IconButton
                    android:id="@+id/save_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal|top"
                    android:text="{fa_floppy_o}"
                    android:textColor="@color/editButton"
                    android:textSize="28sp"
                    android:visibility="gone"
                    android:enabled="false"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <android.widget.IconTextView
                    android:id="@+id/name_icon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="{fa_user}"
                    android:textColor="@color/editButton"
                    android:textSize="24sp"/>

                <ViewSwitcher
                    android:id="@+id/name_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/name_icon">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/name_view">

                    <TextView
                        android:id="@+id/contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/name_hint"
                        android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/name_edit_view">

                    <EditText
                        android:id="@+id/contact_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="@string/name_hint"
                        android:singleLine="true"
                        />
                    </LinearLayout>

                </ViewSwitcher>


            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.25dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="24dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <android.widget.IconTextView
                    android:id="@+id/position_icon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="{fa_suitcase}"
                    android:textColor="@color/editButton"
                    android:textSize="24sp"/>

                <ViewSwitcher
                    android:id="@+id/position_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/position_icon">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/position_view">

                    <TextView
                        android:id="@+id/contact_position"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/position_hint"
                        android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/position_edit_view">

                    <EditText
                        android:id="@+id/contact_position_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="@string/position_hint"
                        android:singleLine="true"
                        />
                    </LinearLayout>
                </ViewSwitcher>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.25dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="24dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <android.widget.IconTextView
                    android:id="@+id/email_icon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="{fa_envelope_o}"
                    android:textColor="@color/editButton"
                    android:textSize="24sp"/>

                <ViewSwitcher
                    android:id="@+id/email_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/email_icon">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/email_view">

                    <TextView
                        android:id="@+id/contact_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/email_hint"
                        android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/email_edit_view">

                    <EditText
                        android:id="@+id/contact_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        />
                    </LinearLayout>
                </ViewSwitcher>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.25dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="24dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <android.widget.IconTextView
                    android:id="@+id/number_icon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="{fa_phone}"
                    android:textColor="@color/editButton"
                    android:textSize="24sp"/>

                <ViewSwitcher
                    android:id="@+id/number_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/number_icon">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/number_view">

                    <TextView
                        android:id="@+id/contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/phone_number_hint"
                        android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/number_edit_view">

                    <EditText
                        android:id="@+id/contact_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="@string/phone_number_hint"
                        android:singleLine="true"
                        android:inputType="number|phone"/>
                    </LinearLayout>
                </ViewSwitcher>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.25dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="24dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_vertical"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <android.widget.IconButton
                        android:id="@+id/contact_fb"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="{fa_facebook_square}"
                        android:textColor="@color/fb"
                        android:textSize="48sp"
                        android:clickable="false"/>

                    <android.widget.IconButton
                        android:id="@+id/contact_linkedin"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/contact_fb"
                        android:gravity="center"
                        android:text="{fa_linkedin_square}"
                        android:textColor="@color/linkedIn"
                        android:textSize="48sp"
                        android:clickable="false"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
