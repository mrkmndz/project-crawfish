<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/fragment_past_event_options"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="24dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"

        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:text="Event Name"
            android:textSize="30sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            >

            <ImageView
                android:id="@+id/clock_icon"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_clock"/>

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_toEndOf="@id/clock_icon"
                android:text="@string/all_day_label"
                />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/clock_icon"
                android:layout_gravity="center"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/location_icon"
                android:ellipsize="end"
                android:hint="@string/location_hint"
                android:singleLine="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            android:text="Event Details"/>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            cardview:cardCornerRadius="16dp"
            cardview:cardElevation="16dp"
            >

            <Button
                android:id="@+id/fragment_past_event_deck_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:text="View Connections"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_past_event_connections_button"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            cardview:cardCornerRadius="16dp"
            cardview:cardElevation="16dp">

            <Button
                android:id="@+id/fragment_past_event_connections_option"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:text="Go Through Attendee Deck"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>
