<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/crop"
                android:orientation="vertical"
                android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_bar_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nav_bar_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="email@gmail.com"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal"
            />
    </LinearLayout>

    <com.facebook.android.projectcrawfish.ProgressSwitcher
        android:layout_width="wrap_content"
        android:id="@+id/nav_bar_picture_switcher"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_bar_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/ic_my_profile"
            app:border_width="0.75dp"
            app:border_color="@color/greyed_out"
            />
    </com.facebook.android.projectcrawfish.ProgressSwitcher>
</RelativeLayout>
