<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:id="@+id/fragment_past_event_options"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="24dp"
    android:gravity="center|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/past_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:textSize="32sp"
            tools:text="Event Name"/>


        <TextView
            android:id="@+id/past_event_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_clock"
            android:gravity="center_vertical"
            tools:text="Time and Date"/>

        <TextView
            android:id="@+id/past_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:gravity="center_vertical"
            tools:text="Location"/>

        <TextView
            android:id="@+id/past_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            tools:text="Event Details"/>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            cardview:cardCornerRadius="16dp"
            cardview:cardElevation="16dp">

            <Button
                android:id="@+id/fragment_past_event_deck_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:text="@string/past_event_view_connections"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            cardview:cardCornerRadius="16dp"
            cardview:cardElevation="16dp">

            <Button
                android:id="@+id/fragment_past_event_connections_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:text="@string/past_event_view_deck"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v7.widget.CardView>
