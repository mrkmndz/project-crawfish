<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:cardview="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/fragment_past_event_options"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="48dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="48dp"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="8dp"
    android:minWidth="600dp"
    android:minHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <com.facebook.android.projectcrawfish.CustomFontTextView
            android:id="@+id/past_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:textSize="36sp"
            tools:text="Event Name"/>


        <com.facebook.android.projectcrawfish.CustomFontTextView
            android:id="@+id/past_event_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_clock"
            android:gravity="center_vertical"
            android:textSize="16sp"
            tools:text="Time and Date"/>

        <com.facebook.android.projectcrawfish.CustomFontTextView
            android:id="@+id/past_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:gravity="center_vertical"
            android:textSize="16sp"
            tools:text="Location"/>

        <com.facebook.android.projectcrawfish.CustomFontTextView
            android:id="@+id/past_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            tools:text="Event Details"
            android:textSize="16sp"
            android:maxLines = "5"
            android:scrollbars = "vertical"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            cardview:cardCornerRadius="16dp"
            cardview:cardElevation="4dp">

            <com.facebook.android.projectcrawfish.CustomFontButton
                android:id="@+id/fragment_past_event_deck_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:text="@string/past_event_view_deck"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v7.widget.CardView>
</FrameLayout>
