 <android.support.v7.widget.CardView
        android:id="@+id/actual_card"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        cardview:cardCornerRadius="8dp"
        cardview:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="455dp"
            android:layout_height="260dp"
            android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/left_view"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21.5dp"
                    android:gravity="fill_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="@string/contact_photo"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"/>

                    <android.widget.IconButton
                        android:id="@+id/camera_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:text="{fa-camera}"
                        android:textColor="@color/editButton"
                        android:textSize="24sp"
                        android:layout_alignRight="@id/profile_picture"
                        android:layout_alignBottom="@id/profile_picture"
                        android:visibility="gone"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_picture"
                        android:layout_centerHorizontal="true"
                        android:gravity="fill_vertical|center"
                        >

                        <android.widget.IconButton
                            android:id="@+id/contact_fb"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="{fa_facebook_square}"
                            android:textColor="@color/fb"
                            android:textSize="48sp"
                            />

                        <android.widget.IconButton
                            android:id="@+id/contact_linkedin"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/contact_fb"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="{fa_linkedin_square}"
                            android:textColor="@color/linkedIn"
                            android:textSize="48sp"/>

                    </RelativeLayout>

                </RelativeLayout>

            <LinearLayout
                android:layout_width="405dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/left_view"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <android.widget.IconButton
                        android:id="@+id/edit_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal|top"
                        android:text="{fa_pencil_square_o}"
                        android:textColor="@color/editButton"
                        android:textSize="28sp"
                        />

                    <android.widget.IconButton
                        android:id="@+id/save_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:enabled="false"
                        android:gravity="center_horizontal|top"
                        android:text="{fa_floppy_o}"
                        android:textColor="@color/editButton"
                        android:textSize="28sp"
                        android:visibility="gone"/>
                </RelativeLayout>

                    <ViewSwitcher
                        android:id="@+id/name_switcher"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content">

                            <com.facebook.android.projectcrawfish.CustomFontTextView
                                android:id="@+id/contact_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/name_hint"
                                android:textSize="36sp"
                                />

                            <com.facebook.android.projectcrawfish.CustomFontEditText
                                android:id="@+id/contact_name_edit"
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:ellipsize="end"
                                android:hint="@string/name_hint"
                                android:singleLine="true"
                                android:textSize="36sp"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"
                                />

                    </ViewSwitcher>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp">

                    <android.widget.IconTextView
                        android:id="@+id/position_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="{fa_suitcase}"
                        android:textColor="@color/editButton"
                        android:textSize="24sp"/>

                    <ViewSwitcher
                        android:id="@+id/position_switcher"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/position_icon">

                        <LinearLayout
                            android:id="@+id/position_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.facebook.android.projectcrawfish.CustomFontTextView
                                android:id="@+id/contact_position"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/position_hint"
                                android:textSize="16.2sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/position_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.facebook.android.projectcrawfish.CustomFontEditText
                                android:id="@+id/contact_position_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="@string/position_hint"
                                android:singleLine="true"
                                />
                        </LinearLayout>
                    </ViewSwitcher>
                </RelativeLayout>

                <View
                    android:layout_width="234dp"
                    android:layout_height="1.25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp">

                    <android.widget.IconTextView
                        android:id="@+id/email_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="{fa_envelope_o}"
                        android:textColor="@color/editButton"
                        android:textSize="24sp"/>

                    <ViewSwitcher
                        android:id="@+id/email_switcher"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/email_icon">

                        <LinearLayout
                            android:id="@+id/email_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.facebook.android.projectcrawfish.CustomFontTextView
                                android:id="@+id/contact_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/email_hint"
                                android:textSize="16.2sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/email_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/contact_email_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="@string/email_hint"
                                android:inputType="textEmailAddress"
                                android:singleLine="true"
                                />
                        </LinearLayout>
                    </ViewSwitcher>
                </RelativeLayout>

                <View
                    android:layout_width="234dp"
                    android:layout_height="1.25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp">

                    <android.widget.IconTextView
                        android:id="@+id/number_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="{fa_phone}"
                        android:textColor="@color/editButton"
                        android:textSize="24sp"/>

                    <ViewSwitcher
                        android:id="@+id/number_switcher"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/number_icon">

                        <LinearLayout
                            android:id="@+id/number_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.facebook.android.projectcrawfish.CustomFontTextView
                                android:id="@+id/contact_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/phone_number_hint"
                                android:textSize="16.2sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/number_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/contact_number_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:hint="@string/phone_number_hint"
                                android:inputType="number|phone"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </ViewSwitcher>
                </RelativeLayout>

                <View
                    android:layout_width="234dp"
                    android:layout_height="1.25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
